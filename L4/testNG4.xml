<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Test Suite 4">
    <test name="Positive and Negative Double Test Sort">
        <groups>
            <run>
                <include name="positive"/>
                <include name="negative"/>
            </run>
        </groups>
        <classes>
            <class name="org.example.SortTestPositive">
                <methods>
                    <include name="testInsertionSortDouble"/>
                    <include name="testCombSortDouble"/>
                    <include name="testSelectionSortDouble"/>
                    <include name="testQuickHoareSortDouble"/>
                </methods>
            </class>
            <class name="org.example.SortTestNegative">
                <methods>
                    <include name="testQuickHoareSortDouble"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>