<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Test Suite 1">
    <test name="Positive All Test Sort">
        <groups>
            <run>
                <include name="positive"/>
            </run>
        </groups>
        <classes>
            <class name="org.example.SortTestPositive">
                <methods>
                    <include name="testInsertionSort"/>
                    <include name="testCombSort"/>
                    <include name="testSelectionSort"/>
                    <include name="testQuickHoareSort"/>
                    <include name="testInsertionSortDouble"/>
                    <include name="testCombSortDouble"/>
                    <include name="testSelectionSortDouble"/>
                    <include name="testQuickHoareSortDouble"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>